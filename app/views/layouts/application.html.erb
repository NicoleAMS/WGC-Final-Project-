<!DOCTYPE html>
<html>
  <head>
    <title>BuddhaExhibition</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css" integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class=="col col-sm-12">

          <header>
            <div class="row header-row">
              <div class="col col-md-4 col-sm-12">
                <%= link_to "https://volkenkunde.nl/en", class: "logo" do %>
                  <i id="main-logo"></i>
                <% end %>
                <i class="fas fa-bars icon-hamburger"></i>
                <!-- <img class="icon-hamburger" src="/assets/hamburger-icon.svg"> -->
              </div>

              <div class="col col-md-8 col-sm-12">
                <nav>

                  <!-- <div class="icon-close"> -->
                    <i class="fas fa-times icon-close"></i>
                 <!--  </div> -->

                  <ul class="menu">
                    <li class="menu-item"><%= link_to "HOME", root_url %></li>
                    <% if user_signed_in?  && current_user.admin_role? || user_signed_in? && current_user.curator_role? %>
                      <li class="menu-item"><%= link_to "ADMIN", '/admin' %></li>
                    <% end %>
                    <li class="menu-item"><%= link_to "ABOUT", about_path %></li>
                    <% if user_signed_in? %>

                      <li class="menu-item"><%= link_to "SEARCH", artefacts_path %></li>
                      <li class="menu-item">
                        <div class="dropdown">
                          <a class="dropdown-toggle" data-toggle="dropdown">EXPLORE<span class="caret"></span></a>
                          <ul class="dropdown-menu">
                            <li><%= link_to "Countries", countries_path %></li>
      <!--                       <div class="divider"></div>
                            <li><%= link_to "Floor Plan", galleries_path %></li> -->
                            <div class="divider"></div>
                            <li><%= link_to "Gallery 1: Introduction", gallery_path(Gallery.find_by(id: 1))%></li>
                            <li><%= link_to "Gallery 2: India & Thailand", gallery_path(Gallery.find_by(id: 2))%></li>
                            <li><%= link_to "Gallery 3: China", gallery_path(Gallery.find_by(id: 3))%></li>
                            <li><%= link_to "Gallery 4: Jewels & Gandhara art", gallery_path(Gallery.find_by(id: 4))%></li>
                            <li><%= link_to "Gallery 5: Indonesia & Sri Lanka", gallery_path(Gallery.find_by(id: 5))%></li>
                            <li><%= link_to "Gallery 6: Myanmar", gallery_path(Gallery.find_by(id: 6))%></li>
                            <li><%= link_to "Gallery 7: Japan & Tibet", gallery_path(Gallery.find_by(id: 7))%></li>
                          </ul>
                        </div>
                      </li>

                      <li class="menu-item"><%= link_to "LOG OUT", destroy_user_session_path, method: :delete %></li>
                    <% else %>
                      <li class="menu-item"><%= link_to "LOG IN", new_user_session_path %></li>
                    <% end %>
                  </ul>
                </nav>
              </div>
            </div>
          </header>

          <!-- <div class="flash-message"> -->
            <% flash.each do |key, value| %>
              <% if value.class == Array %>
                  <div class="<%= flash_class(key) %>">
                      <button type="button" class="close" data-dismiss="alert">×</button>
                      <% value.each do |message| %>
                          <%= message %>
                          </br>
                      <% end %>
                  </div>
              <% else %>
                  <div class="<%= flash_class(key) %>">
                      <button type="button" class="close" data-dismiss="alert">×</button>
                      <%= value %>
                  </div>
              <% end %>
            <% end %>
      <!--     </div> -->

          <main>
            <%= yield %>
          </main>

          <footer>
            <i id="facebook"></i>
            <i id="twitter"></i>
            <p><span>&#169;</span> Nicole Sentis 2017</p>
          </footer>

        </div>
      </div>

    </div>

  </body>
</html>
