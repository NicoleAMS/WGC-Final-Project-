<!DOCTYPE html>
<html>
  <head>
    <title>BuddhaExhibition</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>
    <div class="container">

      <header>
        <div class="row">
          <div class="col-md-4 col-sm-12">
            <%= link_to "https://volkenkunde.nl/en", class: "logo" do %>
              <i id="main-logo"></i>
            <% end %>
          </div>

          <div class="col-md-8 col-sm-12">
            <ul class="menu">
              <li><%= link_to "HOME", root_url %></li>
              <% if user_signed_in?  && current_user.admin_role? || user_signed_in? && current_user.curator_role? %>
                <li><%= link_to "ADMIN", '/admin' %></li>
              <% end %>
              <li><%= link_to "ABOUT", about_path %></li>
              <li><a href="#">SHOP</a></li>
              <% if user_signed_in? %>

                <li><%= link_to "SEARCH", artefacts_path %></li>
                <li>
                  <div class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown">EXPLORE<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Countries", countries_path %></li>
                      <div class="divider"></div>
                      <li><%= link_to "Floor Plan", galleries_path %></li>
                      <div class="divider"></div>
                      <li><%= link_to "Gallery 1: Introduction", gallery_path(@gallery1)%></li>
                      <li><%= link_to "Gallery 2: India & Thailand", gallery_path(@gallery2)%></li>
                      <li><%= link_to "Gallery 3: China", gallery_path(@gallery3)%></li>
                      <li><%= link_to "Gallery 4: Jewels & Gandhara art", gallery_path(@gallery4)%></li>
                      <li><%= link_to "Gallery 5: Indonesia & Sri Lanka", gallery_path(@gallery5)%></li>
                      <li><%= link_to "Gallery 6: Myanmar", gallery_path(@gallery6)%></li>
                      <li><%= link_to "Gallery 7: Japan & Tibet", gallery_path(@gallery7)%></li>
                    </ul>
                  </div>
                </li>

                <li><%= link_to "LOG OUT", destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to "LOG IN", new_user_session_path %></li>
              <% end %>
            </ul>
          </div>

        </div>
      </header>

      <!-- <div class="flash-message"> -->
        <% flash.each do |key, value| %>
          <% if value.class == Array %>
              <div class="<%= flash_class(key) %>">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <% value.each do |message| %>  
                      <%= message %>
                      </br>
                  <% end %>
              </div>
          <% else %>
              <div class="<%= flash_class(key) %>">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <%= value %>
              </div>
          <% end %>
        <% end %>
  <!--     </div> -->

      <main>
        <%= yield %>
      </main>

      <footer>
        <i id="facebook"></i>
        <i id="twitter"></i>
        <p><span>&#169;</span> Nicole Sentis 2017</p>
      </footer>

    </div>

  </body>
</html>
